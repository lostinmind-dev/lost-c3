{
    "name": "@lost-c3/lib",
    "version": "2.0.4",
    "exports": {
        ".": "./mod.ts",
        "./cli": "./cli.ts",
        "./misc": "./misc.ts"
    },
    "tasks": {
        "uninstall:cli": "deno uninstall lost -g",
        "install:cli:local": "deno install --name lost ./cli.ts --global -f -A",
        "test:cli": "deno run -A ./cli.ts"
    },
    "compilerOptions": {
        "noImplicitOverride": false,
        "lib": [
            "deno.window",
            "dom",
            "deno.ns"
        ],
        "types": ["./types"]
    },
    "publish": {
        "include": [
            "deps.ts",
            "mod.ts",
            "cli.ts",
            "./lib/",
            "./cli/",
            "README.md",
            "cover.png"
        ],
        "exclude": [
            ".github",
            "tests",
            "addon_base",
            "package.json",
            "tsconfig.json",
            "src/"
        ]
    }
}