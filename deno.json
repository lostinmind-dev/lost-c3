{
    "name": "@lost-c3/lib",
    "version": "1.0.7",
    "exports": {
        ".": "./mod.ts",
        "./cli": "./cli.ts",
        "./addon_base/": "./cli/addon_base/"
    },
    "fmt": {
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "useTabs": false,
        "exclude": []
    },
    "tasks": {
        "uninstall:cli": "deno uninstall lost -g",
        "install:cli:local": "deno install --name lost ./cli.ts --global -f -A",
        "test:cli": "deno run -A ./cli.ts"
    },
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "publish": {
        "include": [
            "mod.ts",
            "cli.ts",
            "./lib/",
            "./cli/"
        ],
        "exclude": [
            "./cli/src/",
            "tsconfig.json",
            "./cli/plugin_base/src",
            ".github"
        ]
    }
}
